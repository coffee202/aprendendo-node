<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MY crud nodeJS</title>
</head>
<body>
    <h2>Editar Reguistro</h2>
        <% data.forEach(function(details) { %>
            <form action="/edit/<%= details._id %>" method="POST">
                <input type="text" value="<%= details.name %>" name="name">
                <input type="email" value="<%= details.email %>" name="email">
                <br />
                <button><a href="/show">Todos</a></button>
                <button type="submit">Editar</button>
            </form>
        <% })%>
</body>
</html>